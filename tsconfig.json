{
    "compilerOptions": {
      "outDir": "./dist",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "strictNullChecks": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "lib": [
          "dom", 
          "es7"
      ]
    },
    "exclude": [
        "node_modules",
        "lib",
        "es"
    ]
}
